/* fonction d'animation, n'oubliez pas de prefixer ! */
@keyframes slider
{
	0%, 20%, 100%	{ left: 0 }
	25%, 45%		{ left: -100% }
	50%, 70%		{ left: -200% }
	75%, 95%		{ left: -300% }
}
/* complétez le sélecteur : */
#slideshow .slider
{
	/* ... avec la propriété animation */
	animation: slider 25s infinite;
}

